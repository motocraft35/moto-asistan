const MapComponent = () => {
  // Mevcut Map componentini buraya yerleştireceğiz
  // Örnek olarak, MapLibreGL'ın default Map componentini kullanabiliriz
  return (
    <div>
      <mapgl.Map
        style="mapbox://styles/mapbox/streets-v11"
        mapStyle="mapbox://styles/mapbox/streets-v11"
        pitch={60}
        bearing={30}
        antialias={true}
        containerStyle={{
          height: "100vh",
          width: "100vw",
          margin: "0px",
          padding: "0px"
        }}
        center={[0, 0]}
        zoom={10}
        dragPan={true}
        dragRotate={true}
        doubleClickZoom={true}
        touchZoom={true}
        keyboard={true}
        scrollZoom={true}
        touchPitch={true}
        touchRotate={true}
        attributionControl={true}
        logoPosition="top-left"
        container="map"
      >
        // Map componentinin içerikleri burada yer alacaktır
      </mapgl.Map>
    </div>
  );
};

// Mevcut MapClient.js componentini devralıyoruz
const MapClient = () => {
  return (
    <div>
      <MapComponent />
    </div>
  );
};

export default MapClient;